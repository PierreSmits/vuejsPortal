<?xml version="1.0" encoding="UTF-8"?>
<patch>
<x:add path="/" previous="//">
<!--#Bam# vuejs-portal -->
    <!-- drop-down populate -->
    <simple-method method-name="listForDropDown" short-description="List values for populate a drop-down">
	        <entity-and entity-name="parameters.entityName" list="dropDownList">
	            <field-map field-name="parameters.keyFieldName" from-field="parameters.keyFieldValue"/>
	        </entity-and>
        <if-not-empty field="parameters.orderByFieldName">
	        <set field="orderByFieldName[]" from-field="parameters.orderByFieldName"/>
	        <order-value-list order-by-list="orderByFieldName" list="dropDownList"/>
        </if-not-empty>
    </simple-method>
<!--#Eam# vuejs-portal -->
</x:add>
</patch>

